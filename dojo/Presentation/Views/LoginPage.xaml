<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:Presentation.ViewModels"
             x:Class="Presentation.Views.LoginPage"
             x:DataType="viewmodels:LoginViewModel"
             Shell.NavBarIsVisible="False"
             BackgroundColor="#F5F5F5">

    <Grid>
        <ScrollView>
            <VerticalStackLayout 
                Padding="40"
                Spacing="20"
                VerticalOptions="Center"
                MaximumWidthRequest="400"
                HorizontalOptions="Center">

                <!-- Logo and Title -->
                <Image 
                    Source="dotnet_bot.png"
                    HeightRequest="120"
                    Aspect="AspectFit"
                    Margin="0,0,0,20"/>

                <Label 
                    Text="DOJO"
                    FontSize="32"
                    FontAttributes="Bold"
                    HorizontalOptions="Center"
                    TextColor="#333333"/>

                <Label 
                    Text="Ваш персональний планувальник"
                    FontSize="16"
                    HorizontalOptions="Center"
                    TextColor="#666666"
                    Margin="0,0,0,30"/>

                <!-- Email Entry -->
                <Border 
                    BackgroundColor="White"
                    Stroke="{Binding EmailError, Converter={StaticResource ErrorToBorderColorConverter}}"
                    StrokeThickness="2"
                    Padding="15,10"
                    StrokeShape="RoundRectangle 8">
                    <VerticalStackLayout Spacing="5">
                        <Label 
                            Text="Email"
                            FontSize="12"
                            TextColor="#666666"/>
                        <Entry 
                            Text="{Binding Email}"
                            Placeholder="example@mail.com"
                            Keyboard="Email"
                            FontSize="16"
                            TextColor="#333333"/>
                    </VerticalStackLayout>
                </Border>

                <Label 
                    Text="{Binding EmailError}"
                    TextColor="Red"
                    FontSize="12"
                    IsVisible="{Binding EmailError, Converter={StaticResource StringToBoolConverter}}"
                    Margin="5,0,0,0"/>

                <!-- Password Entry -->
                <Border 
                    BackgroundColor="White"
                    Stroke="{Binding PasswordError, Converter={StaticResource ErrorToBorderColorConverter}}"
                    StrokeThickness="2"
                    Padding="15,10"
                    StrokeShape="RoundRectangle 8">
                    <VerticalStackLayout Spacing="5">
                        <Label 
                            Text="Пароль"
                            FontSize="12"
                            TextColor="#666666"/>
                        <Entry 
                            Text="{Binding Password}"
                            Placeholder="••••••••"
                            IsPassword="True"
                            FontSize="16"
                            TextColor="#333333"/>
                    </VerticalStackLayout>
                </Border>

                <Label 
                    Text="{Binding PasswordError}"
                    TextColor="Red"
                    FontSize="12"
                    IsVisible="{Binding PasswordError, Converter={StaticResource StringToBoolConverter}}"
                    Margin="5,0,0,0"/>

                <!-- Login Button -->
                <Button 
                    Text="Увійти"
                    Command="{Binding LoginCommand}"
                    BackgroundColor="#4CAF50"
                    TextColor="White"
                    FontSize="16"
                    FontAttributes="Bold"
                    HeightRequest="50"
                    CornerRadius="8"
                    Margin="0,10,0,0"/>

                <!-- Loading Indicator -->
                <ActivityIndicator 
                    IsRunning="{Binding IsLoading}"
                    IsVisible="{Binding IsLoading}"
                    Color="#4CAF50"
                    HeightRequest="40"/>

                <!-- Register Link -->
                <HorizontalStackLayout 
                    HorizontalOptions="Center"
                    Spacing="5"
                    Margin="0,20,0,0">
                    <Label 
                        Text="Ще не маєте акаунту?"
                        FontSize="14"
                        TextColor="#666666"/>
                    <Label 
                        Text="Зареєструватися"
                        FontSize="14"
                        TextColor="#4CAF50"
                        FontAttributes="Bold">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding RegisterCommand}"/>
                        </Label.GestureRecognizers>
                    </Label>
                </HorizontalStackLayout>

                <!-- Forgot Password Link -->
                <Label 
                    Text="Забули пароль?"
                    FontSize="14"
                    TextColor="#4CAF50"
                    HorizontalOptions="Center">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding ForgotPasswordCommand}"/>
                    </Label.GestureRecognizers>
                </Label>

            </VerticalStackLayout>
        </ScrollView>
    </Grid>

</ContentPage>

